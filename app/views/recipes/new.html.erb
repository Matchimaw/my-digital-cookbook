<div class="grid-container">
  <%= form_for (@recipe) do |f| %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :photo_path, "Photo" %>
      <%= f.file_field :photo_path %>
    </div>

    <div class="field">
      <%= f.label :prepTime, "Prep Time" %>
      <%= f.text_field :prepTime %>
    </div>

    <div class="field">
      <%= f.label :totalTime, "Total Time" %>
      <%= f.text_field :totalTime %>
    </div>

    <div class="field">
      <%= f.label :ingredient, "Ingredients" %>
      <%= f.text_area :ingredient %>
    </div>

    <div class="field">
      <%= f.label :instruction, "Instructions" %>
      <%= f.text_area :instruction %>
    </div>

    <div class="actions">
      <%= f.submit "Add Recipe"%>
    </div>

  <% end %>
</div>
